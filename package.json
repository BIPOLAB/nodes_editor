{
  "name": "nodes-editor",
  "productName": "Nodes Editor",
  "description": "Powerful Editor software for BipoLab products.",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.17.1"
  },
  "main": "src/electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/bipolab/nodes-editor.git"
  },
  "build": {
    "appId": "com.bipolab.nodeseditor",
    "productName": "Nodes Editor",
    "files": [
      "dist",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "vite": "vite",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "serialport": "^13.0.0",
    "svelte": "^5.0.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "firebase": "^12.0.0",
    "node-wifi": "^2.0.16",
    "svelte-splitpanes": "^8.0.9",
    "wifi-control": "^2.0.1"
  }
}
