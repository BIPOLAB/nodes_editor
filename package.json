{
  "name": "nodes-editor",
  "productName": "Nodes Editor",
  "description": "Powerful Editor software for BipoLab products.",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.17.1"
  },
  "main": "src/electron/main.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bipolab/nodes-editor.git"
  },
  "build": {
    "appId": "com.bipolab.nodeseditor",
    "productName": "Nodes Editor",
    "files": [
      "dist",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist": "electron-builder",
    "export": "npm run build && npm run dist",
    "start": "electron .", 
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.1",
    "@types/node": "^24.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "serialport": "^13.0.0",
    "svelte": "^5.38.0",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "firebase": "^12.0.0",
    "node-wifi": "^2.0.16",
    "svelte-splitpanes": "^8.0.9",
    "wifi-control": "^2.0.1"
  }
}
